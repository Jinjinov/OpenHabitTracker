@page "/about"

@inject IStringLocalizer Loc
@inject ILinkAttributeService LinkAttributeService

@* <PageTitle>OpenHabitTracker - About</PageTitle> *@

<div @ref="WrapperElement" class="px-0 px-md-1">
    <div class="my-1">

        <h3><span style="font-family: 'Caveat', cursive; font-size: 1.5em;">OpenHabitTracker</span></h3>

        <h6>@Loc["Version"] 1.1.2</h6>

        <p><a href="https://openhabittracker.net">https://openhabittracker.net</a></p>

        <h5>@Loc["Take Markdown notes, plan tasks, track habits"]:</h5>

        <ul>
            <li>@Loc["Free and Ad-Free"]</li>
            <li>@Loc["Open Source"]: <a href="https://github.com/Jinjinov/OpenHabitTracker"><i class="bi bi-github"></i></a></li>
            <li>@Loc["Privacy Focused: All user data is stored locally on your device"]</li>
            <li>@Loc["Available on Windows, Linux, Android, iOS, macOS, and as a web app"]</li>
            <li>@Loc["Localized to English, German, Spanish, Slovenian"]</li>
        </ul>

        <h5> @Loc["Key Features"]:</h5>

        <ul>
            <li>@Loc["Markdown support for notes"]</li>
            <li>@Loc["Use categories and priorities to organize your notes, tasks, and habits"]</li>
            <li>@Loc["Advanced Search, Filter, and Sort"]</li>
            <li>@Loc["Data Export/Import: JSON, YAML, TSV, Markdown"]</li>
            <li>@Loc["Import your notes from Google Keep"]</li>
            <li>@Loc["Available in 26 themes with Dark and Light modes"]</li>
        </ul>

        <h3>@Loc["Privacy"]:</h3>
        <ul>
            <li><span style="font-family: 'Caveat', cursive; font-size: 1.5em;">OpenHabitTracker</span> @Loc["saves your data (notes, tasks and habits) on your device, offering you complete privacy."]</li>
            <li>@Loc["It allows you to delete the data stored on your device at any time."]</li>
            <li>@Loc["If you use the Docker image to enable online sync, all data is stored in your Docker container and is completely under your control."]</li>
            <li>@Loc["You can read the privacy policy at"] <a href="https://openhabittracker.net/privacy-policy.html" target="_blank">https://openhabittracker.net/privacy-policy.html</a></li>
        </ul>

        <span>Â© 2024 Jinjinov</span>

    </div>
</div>

@code {
    private ElementReference WrapperElement;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LinkAttributeService.AddAttributesToLinks(WrapperElement);
        }
    }
}
